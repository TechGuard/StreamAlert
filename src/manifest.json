{
    "manifest_version": 2,
    "name": "Twitch Notifications",
    "short_name": "Twitch Notify",
    "author": "Robin van Nunen",
    "description": "Receive desktop notifications when a streamer goes live.",
    "version": "1.1.0",
    "offline_enabled": false,
    
    "icons": {
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    
    "browser_action": {
        "default_icon": "img/icon-19-off.png",
        "default_title": "Twitch Notifications",
        "default_popup": ""
    },
    
    "background": {
        "scripts": [
            "js/jquery-1.11.2.min.js",
            "js/twitch.min.js",
            "js/background.js"
        ]
    },

    "permissions": [
        "tabs",
        "notifications",
        "storage",
        "*://*/*"
    ],

    "web_accessible_resources": [
        "verify.html"
    ],

    "content_security_policy": "script-src 'self' https://api.twitch.tv; object-src 'self'"

}